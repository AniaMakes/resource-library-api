{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
  },
  "plugins": ["jest"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "avoidEscape": true,
    "no-console": 0,
    "allowTemplateLiterals": true
  },
  "env": {
    "jest/globals": true,
  }
}
